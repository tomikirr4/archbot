model {
  teacher = user 'Учитель' {
    description 'Пользователь, создающий контрольные работы'
  }

  gen_system = system 'Генератор контрольных работ ПГ' {
    description 'Система генерации и обработки контрольных работ для Политехнической гимназии'
  }

  llm = external_system 'LLM сервис' {
    description 'LLM сервис для генерации и анализа текста (Google Gemini)'
  }

  teacher -> gen_system 'Задаёт параметры генерации контрольной работы'
  gen_system -> teacher 'Возвращает сгенерированную контрольную работу'
  gen_system -> llm 'Отправляет запрос на генерацию текста'
  llm -> gen_system 'Возвращает сгенерированный текст'
}

views {
  view context {
    title 'Контекстная диаграмма бота для генерации контрольных работ'
    include teacher, gen_system, llm
    autoLayout TopBottom
  }
}
